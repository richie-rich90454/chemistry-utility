{
  "name": "chemistry-utility",
  "version": "3.0.0",
  "description": "A program designed to balance chemical equations and solve other chemistry problems made with HTML, CSS, and TypeScript.",
  "type": "module",
  "scripts": {
    "start": "go run main.go",
    "build:server": "tsc -p tsconfig.server.json",
    "start:nodejs": "npm run build:server && node server.js",
    "build": "tsc && vite build",
    "dev": "vite dev",
    "preview": "vite preview"
  },
  "keywords": [
    "chemistry",
    "chemical-equation-balancer",
    "molar-mass-calculator",
    "stoichiometry-solver",
    "element-lookup-tool",
    "gas-laws-calculator",
    "educational-chemistry",
    "chemistry-student-tools",
    "web-based-chemistry-tool"
  ],
  "author": "richie-rich90454",
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^8.1.1",
    "fastify": "^5.3.2",
    "katex": "^0.16.22"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "cssnano-preset-advanced": "^7.0.10",
    "terser": "^5.46.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^6.2.2",
    "vite-plugin-html": "^3.2.2"
  }
}
